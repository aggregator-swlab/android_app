<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.harrispaul.aggregator">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:name=".Menu"
            android:label="@string/app_name"

            >
            <intent-filter>
                <action android:name="com.example.harrispaul.aggregator.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpenApp"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            >
            <intent-filter>
                <action android:name="com.example.harrispaul.aggregator.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductContent"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            >
            <intent-filter>
                <action android:name="com.example.harrispaul.aggregator.PRODUCTCONTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadImage"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="com.example.harrispaul.aggregator.LOADIMAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Deals"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="com.example.harrispaul.aggregator.DEALS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestPopupActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="com.example.harrispaul.aggregator.TESTPOPUPACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
